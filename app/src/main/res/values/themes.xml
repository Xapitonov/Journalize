<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.Journal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/textColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/textColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <!-- Define the custom attribute for the background -->
        <item name="backgroundColor">@color/backgroundColor</item>
        <!-- Ensure window background uses the correct resource -->
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:editTextBackground">@android:color/transparent</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/buttonColor</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:padding">4dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Custom dialog theme -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:buttonBarButtonStyle">@style/AlertDialogButton</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textColorSecondary">@color/textColor</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- Custom dialog button style -->
    <style name="AlertDialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:backgroundTint">@color/buttonColor</item>
    </style>

    <style name="EditTextWithCustomHandles" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/handleColor</item> <!-- Custom color for handles -->
    </style>

</resources>
