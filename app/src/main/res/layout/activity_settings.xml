<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/backgroundColor">

    <!-- Timer Settings -->
    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inactivity duration (in seconds):"
        android:textColor="?attr/colorOnPrimary"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/timerEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Enter seconds"
        android:textColor="?attr/colorOnPrimary"
        android:background="@color/buttonColor"
        android:padding="10dp"
        android:layout_marginBottom="16dp"
        android:theme="@style/EditTextWithCustomHandles"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOnPrimary"
        android:layout_marginBottom="16dp" />

    <!-- Tag Editing Section -->
    <TextView
        android:id="@+id/tagsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Tags (comma-separated):"
        android:textColor="?attr/colorOnPrimary"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/tagsEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter tags"
        android:textColor="?attr/colorOnPrimary"
        android:background="@color/buttonColor"
        android:padding="10dp"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:layout_marginBottom="16dp"
        android:theme="@style/EditTextWithCustomHandles"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOnPrimary"
        android:layout_marginBottom="16dp" />

    <!-- Dark/Light Mode Selection -->
    <TextView
        android:id="@+id/themeSwitchLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Theme:"
        android:textColor="?attr/colorOnPrimary"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/darkModeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dark Mode"
            android:background="@color/buttonColor"
            android:textColor="@color/buttonTextColor"
            android:padding="10dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/lightModeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Light Mode"
            android:background="@color/buttonColor"
            android:textColor="@color/buttonTextColor"
            android:padding="10dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOnPrimary"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- JSON Operations -->
    <Button
        android:id="@+id/deleteJsonButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Entries"
        android:background="@color/buttonColor"
        android:textColor="@color/buttonTextColor"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/shareJsonButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share Entries"
        android:background="@color/buttonColor"
        android:textColor="@color/buttonTextColor"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/importJsonButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Import Entries"
        android:background="@color/buttonColor"
        android:textColor="@color/buttonTextColor"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/chooseDirButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Choose Save Directory"
            android:background="@color/buttonColor"
            android:textColor="@color/buttonTextColor"
            android:padding="2dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/exportJsonButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Export Entries"
            android:background="@color/buttonColor"
            android:textColor="@color/buttonTextColor"
            android:padding="10dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOnPrimary"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Button to view or manage entries -->
    <Button
        android:id="@+id/viewJsonButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View or Edit Entries JSON directly"
        android:background="@color/buttonColor"
        android:textColor="@color/buttonTextColor"
        android:layout_marginBottom="16dp" />
</LinearLayout>
